<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ojanbelajar.aronta">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />
    <application
        android:name=".ArontaApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:hardwareAccelerated="false"
        android:theme="@style/Theme.Aronta">
        <activity
            android:name=".ui.MainActivity"
            android:exported="true">

        </activity>
        <activity android:name=".ui.login.LoginActivity"
            android:exported="true">

        </activity>
        <activity android:name=".ui.signup.SignUpActivity">
        </activity>
        <activity android:name=".ui.home.HomeActivity"/>
        <activity android:name=".ui.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.today.TodayActivity"/>
        <activity android:name=".ui.news.NewsActivity"/>
        <activity android:name=".ui.learn.LearnActivity"/>
        <activity android:name=".ui.learn.LearnDetailActivity"/>
        <activity android:name=".ui.order.OrderDetailActivity"/>
        <activity android:name=".ui.detail.DetailActivity"/>
        <activity android:name=".ui.order.OrderListActivity"/>
        <activity android:name=".ui.order.AfterOrderActivity"/>
    </application>

</manifest>